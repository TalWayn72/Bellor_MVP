# Root .env.example for the entire monorepo
# Copy this to .env and fill in your values

# ======================
# FRONTEND (apps/web)
# ======================
VITE_API_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000
VITE_SENTRY_DSN=

# ======================
# BACKEND (apps/api)
# ======================

# Application
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
FRONTEND_URL=http://localhost:5173

# Database
DATABASE_URL=postgresql://bellor:bellor_dev@localhost:5432/bellor

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-key-min-32-characters-change-this-in-production
JWT_REFRESH_SECRET=another-super-secret-key-min-32-characters-change-this-too
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Storage (Cloudflare R2 / AWS S3)
R2_ENDPOINT=https://xxx.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=bellor-media
CDN_URL=https://media.bellor.app

# Email (SendGrid)
SENDGRID_API_KEY=
EMAIL_FROM=noreply@bellor.app

# SMS (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=

# Monitoring
SENTRY_DSN=
LOG_LEVEL=info
