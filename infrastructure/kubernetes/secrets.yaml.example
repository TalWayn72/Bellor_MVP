# =====================================================
# Bellor Secrets - EXAMPLE FILE
# =====================================================
# DO NOT commit this file with real values!
# Copy to secrets.yaml and fill in your real values
# Then create with: kubectl apply -f secrets.yaml

---
apiVersion: v1
kind: Secret
metadata:
  name: bellor-secrets
  namespace: bellor
type: Opaque
stringData:
  database-url: "postgresql://user:password@host:5432/bellor"
  redis-url: "redis://:password@host:6379"
  jwt-secret: "your-super-secret-jwt-key-min-32-characters"
  jwt-refresh-secret: "your-super-secret-refresh-key-min-32-characters"
  r2-endpoint: "https://xxx.r2.cloudflarestorage.com"
  r2-access-key: "your-r2-access-key"
  r2-secret-key: "your-r2-secret-key"
  r2-bucket: "bellor-media"

---
apiVersion: v1
kind: ConfigMap
metadata:
  name: bellor-config
  namespace: bellor
data:
  frontend-url: "https://bellor.app"
  api-url: "https://api.bellor.app"
  cdn-url: "https://cdn.bellor.app"
  jwt-expires-in: "15m"
  jwt-refresh-expires-in: "7d"

# =====================================================
# Quick Create Commands:
# =====================================================
# Using kubectl:
#   kubectl create secret generic bellor-secrets \
#     --from-literal=database-url="postgresql://..." \
#     --from-literal=redis-url="redis://..." \
#     --from-literal=jwt-secret="..." \
#     --namespace=bellor
#
# Using sealed-secrets (recommended for GitOps):
#   kubeseal < secrets.yaml > sealed-secrets.yaml
#   kubectl apply -f sealed-secrets.yaml
# =====================================================
