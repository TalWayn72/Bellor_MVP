{
  "name": "bellor-mvp",
  "private": true,
  "version": "1.0.0",
  "description": "Bellor - Modern dating and social networking application",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@bellor/web",
    "dev:api": "npm run dev --workspace=@bellor/api",
    "dev:all": "concurrently \"npm run dev:api\" \"npm run dev\"",
    "build": "npm run build --workspaces --if-present",
    "build:web": "npm run build --workspace=@bellor/web",
    "build:api": "npm run build --workspace=@bellor/api",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:api": "npm run test --workspace=@bellor/api",
    "test:web": "npm run test --workspace=@bellor/web",
    "test:e2e": "npm run test:e2e --workspace=@bellor/web",
    "test:visual": "npm run test:visual --workspace=@bellor/web",
    "test:visual:update": "npm run test:visual:update --workspace=@bellor/web",
    "test:mutation": "stryker run",
    "test:mutation:report": "start reports/mutation/mutation-report.html",
    "test:memory-leak": "npm run test apps/api/src/test/memory-leak-detection.test.ts apps/web/src/test/memory-leak-detection.test.ts",
    "check:memory-leaks": "node scripts/check-memory-leaks.js",
    "prisma:generate": "npm run prisma:generate --workspace=@bellor/api",
    "prisma:migrate": "npm run prisma:migrate --workspace=@bellor/api",
    "prisma:studio": "npm run prisma:studio --workspace=@bellor/api",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules apps/*/dist",
    "prepare": "husky",
    "load:smoke": "k6 run infrastructure/k6/smoke-test.js",
    "load:sustained": "k6 run infrastructure/k6/sustained-load.js",
    "load:stress": "k6 run infrastructure/k6/stress-test.js",
    "load:spike": "k6 run infrastructure/k6/spike-test.js",
    "load:memory": "k6 run infrastructure/k6/memory-leak-test.js",
    "load:db": "k6 run infrastructure/k6/db-performance-test.js",
    "load:websocket": "k6 run infrastructure/k6/websocket-test.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@sethdouglasford/mcp-figma": "^1.0.9",
    "@stryker-mutator/core": "^9.5.1",
    "@stryker-mutator/typescript-checker": "^9.5.1",
    "@stryker-mutator/vitest-runner": "^9.5.1",
    "baseline-browser-mapping": "^2.9.19",
    "concurrently": "^9.2.0",
    "eslint": "^9.19.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
