{
  "name": "bellor-mvp",
  "private": true,
  "version": "1.0.0",
  "description": "Bellor - Modern dating and social networking application",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@bellor/web",
    "dev:api": "npm run dev --workspace=@bellor/api",
    "dev:all": "concurrently \"npm run dev:api\" \"npm run dev\"",
    "build": "npm run build --workspaces --if-present",
    "build:web": "npm run build --workspace=@bellor/web",
    "build:api": "npm run build --workspace=@bellor/api",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "prisma:generate": "npm run prisma:generate --workspace=@bellor/api",
    "prisma:migrate": "npm run prisma:migrate --workspace=@bellor/api",
    "prisma:studio": "npm run prisma:studio --workspace=@bellor/api",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules apps/*/dist",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@sethdouglasford/mcp-figma": "^1.0.9",
    "baseline-browser-mapping": "^2.9.19",
    "concurrently": "^9.2.0",
    "eslint": "^9.19.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
